<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:background="#C4CD69"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@mipmap/sach"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"/>
        <LinearLayout
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtMaSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID: 1"
                android:textSize="24sp"/>

            <TextView
                android:id="@+id/txtTenSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kể cho em nghe"
                android:textStyle="bold"
                android:textSize="30sp"/>
            <TextView
                android:id="@+id/txtTacGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kim Đồng"
                android:textStyle="italic|bold"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/txtGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10000 VND"
                android:textStyle="italic|bold"
                android:textSize="24sp"/>
            <TextView
                android:id="@+id/txtTenLoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hành động"
                android:textStyle="italic|bold"
                android:textSize="24sp"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_edit_24"/>
        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/baseline_delete_24"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>